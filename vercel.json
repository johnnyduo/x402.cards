{
  "buildCommand": "yarn build",
  "framework": "vite",
  "installCommand": "yarn install",
  "devCommand": "yarn dev",
  "outputDirectory": "dist",
  "rewrites": [
    { "source": "/api/agents/signal-forge", "destination": "/api-vercel/signal-forge" },
    { "source": "/api/agents/volatility-pulse", "destination": "/api-vercel/volatility-pulse" },
    { "source": "/api/agents/arb-navigator", "destination": "/api-vercel/arb-navigator" },
    { "source": "/api/agents/sentiment-radar", "destination": "/api-vercel/sentiment-radar" },
    { "source": "/api/agents/risk-sentinel", "destination": "/api-vercel/risk-sentinel" },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
